<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/save_scuba"
        android:layout_width="154dp"
        android:layout_height="47dp"
        android:layout_marginTop="470dp"
        android:text="Save"
        app:backgroundTint="#9400E676"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cancel_scuba"
        android:layout_width="154dp"
        android:layout_height="47dp"
        android:layout_marginTop="470dp"
        android:text="Cancel"
        app:backgroundTint="#FF8A80"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="415dp"
        android:layout_height="445dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:fillViewport="true"
        android:isScrollContainer="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Log Title *"
                android:textSize="21sp"
                android:singleLine = "true"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/think_content"
                android:layout_width="365dp"
                android:layout_height="120dp"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:ems="10"
                android:gravity="start|top"
                android:hint="What's your memory...Tap here to add your thoughts.."
                android:inputType="textMultiLine"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/thinks"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/water_content"
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Click to enter the water entry condition.."
                android:inputType="textMultiLine"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/water_entry" />

            <EditText
                android:id="@+id/scenery_content"
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:layout_marginStart="136dp"
                android:layout_marginLeft="136dp"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Click to enter the scenery condition..."
                android:inputType="textMultiLine"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scenery" />

            <EditText
                android:id="@+id/weather_content"
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:layout_marginStart="276dp"
                android:layout_marginLeft="276dp"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Click to enter the weather condition..."
                android:inputType="textMultiLine"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/weather" />

            <EditText
                android:id="@+id/start_time"
                android:layout_width="108dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="232dp"
                android:layout_marginRight="232dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="hh:mm:ss"
                android:inputType="time"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/start_date"
                app:layout_constraintTop_toBottomOf="@+id/div_date" />

            <EditText
                android:id="@+id/end_time"
                android:layout_width="108dp"
                android:layout_height="35dp"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:ems="10"
                android:hint="hh:mm:ss"
                android:inputType="time"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.12"
                app:layout_constraintStart_toEndOf="@+id/end_title"
                app:layout_constraintTop_toBottomOf="@+id/div_date" />

            <EditText
                android:id="@+id/div_date"
                android:layout_width="360dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="dd/mm/yy"
                android:inputType="date"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/diving_time" />

            <EditText
                android:id="@+id/dive_location"
                android:layout_width="360dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Enter a location"
                android:inputType="textCapWords"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/diving_site" />

            <EditText
                android:id="@+id/num_dive"
                android:layout_width="365dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="No."
                android:inputType="number"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/no_dive" />

            <EditText
                android:id="@+id/max_dep_input"
                android:layout_width="167dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:inputType="number"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/max_dep" />

            <EditText
                android:id="@+id/avg_dep_input"
                android:layout_width="167dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:inputType="number"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/avg_dep" />

            <EditText
                android:id="@+id/weight_input"
                android:layout_width="365dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:inputType="number"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/weights" />

            <EditText
                android:id="@+id/min_temp_input"
                android:layout_width="167dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:inputType="numberSigned"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.875"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/max_dep" />

            <EditText
                android:id="@+id/avg_temp_input"
                android:layout_width="167dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:inputType="numberSigned"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.875"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/avg_temp" />

            <EditText
                android:id="@+id/BCD_Brand"
                android:layout_width="91dp"
                android:layout_height="36dp"
                android:layout_marginTop="200dp"
